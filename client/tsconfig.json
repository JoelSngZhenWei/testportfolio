{
  "compilerOptions": {
    "target": "ESNext", // Set the JavaScript version target to ESNext
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Keep these libraries
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext", // Keep using ESNext module format
    "moduleResolution": "bundler", // Keep this for Next.js compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"] // Correct path mapping for aliases
    },
    "downlevelIteration": true // Add this line to enable iteration for older targets
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/global.d.ts" // Keep this line to include the global.d.ts file
  ],
  "exclude": ["node_modules"]
}
